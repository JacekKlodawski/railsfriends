<%= form_with(model: friend) do |form| %>
  <% if friend.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(friend.errors.count, "error") %> prohibited this friend from being saved:</h2>

      <ul>
        <% friend.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= form.label :imie %>
    <%= form.text_field :imie, class:'form-control', placeholder:'imie' %>
  </div>

  <div class="field form-group">
    <%= form.label :nazwisko %>
    <%= form.text_field :nazwisko, class:'form-control' %>
  </div>

  <div class="field form-group">
    <%= form.label :email %>
    <%= form.text_field :email, class:'form-control' %>
  </div>

  <div class="field form-group">
    <%= form.label :telefon %>
    <%= form.text_field :telefon, class:'form-control' %>
  </div>
  <br/>
  <div class="field form-group">
    <%= form.number_field :user_id, id: :friend_user_id, class:'form-control', value: current_user.id, type: :hidden %>
  </div>
<br/>
  <div class="actions">
    <%= form.submit class:'btn btn-primary' %>
  </div>
  
<% end %>
